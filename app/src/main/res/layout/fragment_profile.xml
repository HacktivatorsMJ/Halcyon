<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/info"
        android:src="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/pic"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/things"
        android:layout_below="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/things"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ab"
        android:layout_below="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/ab"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/bc"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depression Status"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/bc"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cd"
        android:layout_below="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress Status"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/cd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ef"
        android:layout_below="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>






</RelativeLayout>