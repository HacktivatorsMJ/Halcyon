<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="30dp"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold"
                android:textColor="@color/secondary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <!--
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
                -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/info"
                android:src="@drawable/model"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>



            <TextView
                android:id="@+id/full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16dp"
                android:textColor="@color/secondary"
                android:layout_below="@+id/profile"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/things"
                android:layout_below="@+id/full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginHorizontal="25sp"
                android:hint="username"
                android:background="@drawable/edit_text"

                android:inputType="textPersonName"
                android:backgroundTint="#F6F6F6"/>

            <TextView
                android:id="@+id/Email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:layout_below="@+id/things"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email_box"
                android:layout_below="@+id/Email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginHorizontal="25sp"
                android:hint="e-mail"
                android:background="@drawable/edit_text"

                android:inputType="textPersonName"
                android:backgroundTint="#F6F6F6"/>

            <TextView
                android:id="@+id/phoneNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="16dp"
                android:textColor="@color/secondary"
                android:layout_below="@+id/email_box"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneNoBox"
                android:layout_below="@+id/phoneNoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginHorizontal="25sp"
                android:hint="Notes"
                android:background="@drawable/edit_text"

                android:inputType="textPersonName"
                android:backgroundTint="#F6F6F6"/>

            <TextView
                android:id="@+id/dep_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depression Status"
                android:textSize="16dp"
                android:textColor="@color/secondary"
                android:layout_below="@+id/phoneNoBox"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>


            <LinearLayout
                android:id="@+id/depressionStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dep_txt"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="30dp"
                    android:layout_height="5dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/stressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stress Status"
                android:textSize="16dp"
                android:textColor="@color/secondary"
                android:layout_below="@+id/depressionStatusLayout"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>


        </RelativeLayout>

    </ScrollView>








</RelativeLayout>