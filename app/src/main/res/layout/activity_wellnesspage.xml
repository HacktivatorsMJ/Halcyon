<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What kind of wellness are you into?"
                android:textColor="@color/secondary"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/wellnesstxt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_marginTop="40dp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/wellnesstxt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/breathingtxt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Deep Breathing  "
                        android:textColor="@color/secondary"
                        android:textSize="28dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp">

                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/lungs"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp">

                    </ImageView>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/breathingtxt"
                    android:backgroundTint="@color/primary"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/relaxationtxt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Progressive muscle relaxation"
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/man"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp">

                    </ImageView>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/relaxationtxt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/meditationtxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mindfulness \n meditation"
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp">
                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yoga"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/meditationtxt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/yogatxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yoga"
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="35dp">

                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yogaa"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="20dp">

                    </ImageView>


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/yogatxt"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/journalingtxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journaling "
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp">
                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/journal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/journalingtxt"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/coloringtxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coloring and art \n therapy"
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp">
                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/coloring"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp">
                    </ImageView>


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/coloringtxt"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/walkstxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nature walks"
                        android:textColor="@color/secondary"
                        android:textSize="28dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp">
                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/nature"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="30dp">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/walkstxt"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/musictxt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music therapy"
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp">
                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/music"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="40dp">
                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/musictxt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self-Compassion \n practices "
                        android:textSize="28dp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp">
                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/compassion"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp">

                    </ImageView>


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>