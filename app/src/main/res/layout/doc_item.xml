<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Abid Nafi"
        android:textSize="29dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/psycho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psychologist"
        android:textSize="19dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/doc"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 years experience"
        android:textSize="19dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/psycho"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book visit"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="26dp"
        android:background="@drawable/question_btn"
        android:padding="10dp"
        android:layout_below="@+id/years"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call now"
        android:background="@drawable/question_btn"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_below="@+id/years"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>