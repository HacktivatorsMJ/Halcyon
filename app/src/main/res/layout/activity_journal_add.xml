<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalAddActivity">

    <TextView
        android:id="@+id/journalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't let your memories fade away; type your thoughts and record your journey..."
        android:textSize="16dp"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/journal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOURNAL"
        android:textSize="26dp"
        android:fontFamily="@font/nunito_sans"
        android:layout_below="@+id/journalt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="new"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="26dp"
        android:background="@drawable/question_btn"
        android:padding="10dp"
        android:layout_below="@+id/journal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stuck without ideas? give these a try!"
        android:layout_below="@id/journal"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/no"
        android:layout_marginStart="5dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/thoughts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write your thoughts below.."
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/things"
        android:layout_below="@+id/thoughts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="25sp"
        android:hint="Notes"
        android:background="@drawable/edit_text"

        android:inputType="textMultiLine"
        android:backgroundTint="#F6F6F6"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preserve"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close"
        android:layout_alignParentEnd="true"/>





</RelativeLayout>