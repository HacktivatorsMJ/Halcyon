<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What kind of wellness are you into?"
                android:textColor="@color/secondary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/wellnesstxt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:layout_marginTop="40dp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/wellnesstxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/breathingtxt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deep Breathing"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary"
                    android:textSize="28dp"
                    >

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/breathingtxt"
                    android:backgroundTint="@color/primary"
                    android:background="@drawable/rounded_corner"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                    android:id="@+id/relaxationtxt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progressive muscle relaxation"
                        android:textSize="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/secondary"
                        >

                    </TextView>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_below="@id/relaxationtxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/meditationtxt">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness meditation"
                    android:textSize="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/secondary"
                    >

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/meditationtxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/yogatxt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:textSize="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary">

                </TextView>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/yogatxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/journalingtxt">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Journaling"
                    android:textSize="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/secondary"
                    >

                </TextView>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/journalingtxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/coloringtxt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coloring and art therapy"
                    android:textSize="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/coloringtxt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/walkstxt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature walks"
                    android:textColor="@color/secondary"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="28dp">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/walkstxt"
               android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner"
                android:id="@+id/musictxt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music therapy"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textSize="28dp"
                    android:textColor="@color/secondary">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/musictxt"
                android:layout_margin="20dp"


                android:backgroundTint="@color/primary"
                android:background="@drawable/rounded_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self-Compassion practices"
                    android:textSize="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary">

                </TextView>
            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>